
<h1>Reservations</h1>
<table class="table table-striped table-bordered table-hover">

  <thead class="thead-dark">
    <tr>
    <th>id</th>
    <th>desk_id</th>
    <th>user_id</th>
    <th>start_date</th>
    <th>end_date</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <% if reservation.user == current_user %>
        <tr>

          <td><%= reservation.id %></td>

          <td><%= reservation.desk_id %></td>

          <td><%= reservation.user_id %></td>

          <td><%= reservation.start_date %></td>

          <td><%= reservation.end_date %></td>

          <td><%= link_to 'Show', reservation, class: "btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_reservation_path(reservation), class: "btn btn-secondary" %></td>
          <td><%= link_to 'Delete', reservation, data: { turbo_method: :delete}, class: "btn btn-outline-danger btn-sm" %></td>

        </tr>

        <% end %>
      <% end %>

  </tbody>
</table>


