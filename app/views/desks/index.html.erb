  
  <h1>Desks</h1>

  <% if current_user.is_admin %>
  <table class="table table-striped table-bordered table-hover">

    <thead class="thead-dark">
      <tr>
      <th>id</th>
      <th>Status</th>
      </tr>
    </thead>

    

    <tbody>
      <% @desks.each do |desk| %>
        <tr>

          <td><%= desk.id %></td>
        
          <td><%= desk.status %></td>


          <td><%= link_to 'Show', desk, class: "btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_desk_path(desk), class: "btn btn-secondary" %></td>
          <td><%= link_to 'Delete', desk, data: { turbo_method: :delete}, class: "btn btn-outline-danger btn-sm" %></td>

        </tr>


        <% end %>
      
    </tbody>
  </table>


  <br>

  <%= link_to 'New Desk', new_desk_path, class:"btn btn-dark" %>
<% end %>
